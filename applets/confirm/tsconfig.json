{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ES2022"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": "src",
    "resolveJsonModule": true,
    "composite": true,
    "types": ["node"]
  },
  "references": [{ "path": "../../packages/kit" }],
  "include": ["src/**/*"],
  "exclude": ["dist", "node_modules", "front"]
}
