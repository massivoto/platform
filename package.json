{
  "name": "@robusta/massivoto",
  "type": "module",
  "private": true,
  "scripts": {
    "yarn:install": "yarn install",
    "clean": "npx rimraf packages/*/dist && rimraf node_modules",
    "clean:claude": "npx rimraf tmpclaude-*",
    "clean:install": "yarn clean && yarn install",
    "build": "tsc --build",
    "build:kit": "yarn workspace @massivoto/kit build",
    "build:runtime": "yarn workspace @massivoto/runtime build",
    "dev": "yarn workspaces foreach -A run dev",
    "test": "yarn workspaces foreach -A run test",
    "type-check": "tsc --noEmit"
  },
  "workspaces": [
    "apps/*",
    "packages/*",
    "services/*"
  ],
  "devDependencies": {
    "@types/node": "^22",
    "concurrently": "^8.2.2",
    "globals": "^16.5.0",
    "prettier": "^3.7.4",
    "rimraf": "^6.0.1",
    "typescript": "^5.9.3"
  },
  "description": "The Open Source Platform for Massivoto Automation Language",
  "keywords": [
    "massivoto",
    "automation",
    "automation language",
    "low-code",
    "platform"
  ],
  "author": "Nicolas Zozol",
  "license": "Apache-2.0",
  "homepage": "https://massivoto.com",
  "dependencies": {
    "@react-oauth/google": "^0.13.4",
    "appwrite": "^21.5.0",
    "jwt-decode": "^4.0.0"
  }
}
