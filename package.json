{
  "name": "@robusta/massivoto",
  "type": "module",
  "private": true,
  "scripts": {
    "yarn:install": "yarn install",
    "clean": "npx rimraf packages/*/dist && rimraf node_modules",
    "clean:install": "yarn clean && yarn install",
    "build": "tsc --build",
    "build:kit": "yarn workspace @massivoto/kit build",
    "build:engine": "yarn workspace @massivoto/engine build",
    "dev": "yarn workspaces foreach run dev",
    "test": "yarn workspaces foreach run test",
    "type-check": "tsc --noEmit"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {

  },
  "devDependencies": {
    "typescript": "^5.9.3",
    "@types/node": "^22",
    "concurrently": "^8.2.2",
    "rimraf": "^6.0.1",
    "globals": "^16.5.0",
    "prettier": "^3.7.4"
  },
  "description": "The Open Source Platform for Massivoto Automation Language",
  "keywords": ["massivoto", "automation", "automation language", "low-code", "platform"],
  "author": "Nicolas Zozol",
  "license": "Apache-2.0",
  "homepage": "https://massivoto.com"
}
