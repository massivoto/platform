# Server configuration
PORT=3700
FRONTEND_ORIGIN=http://localhost:8080

# Auth mode: 'real' (default) or 'mock'
# In mock mode, OAuth credentials are optional and requests are simulated
# Use mock mode for CI tests and frontend development
AUTH_MODE=real

# GitHub OAuth credentials (optional in mock mode)
GITHUB_CLIENT_ID=__set_me__
GITHUB_CLIENT_SECRET=__set_me__
GITHUB_REDIRECT_URI=http://localhost:3700/oauth/github/callback

# Google OAuth credentials (optional in mock mode)
GOOGLE_CLIENT_ID=__set_me__
GOOGLE_CLIENT_SECRET=__set_me__
GOOGLE_REDIRECT_URI=http://localhost:3700/oauth/google/callback
